@{
    ViewData["Title"] = "Crashes";
}

@model CrashesViewModel

<!-- Pricing section-->
<section class="bg-light py-5">
    <div class="container px-5">
        <div class="text-center">
            <h1 class="fw-bolder">Crash Data</h1>
        </div>

        <div class="container pb-2">
            <div class="row">
                <div class="col-sm-auto">
                    <span class="font-weight-bold">Filters:</span>
                </div>
                <div class="col-sm-auto">
                    <vc:severity></vc:severity>
                </div>
                @*<div class="col-sm-auto">
                    <vc:county></vc:county>
                </div>*@
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead class="font-weight-bold bg-secondary text-white">
                <tr>
                    <td>Crash ID</td>
                    <td>Date/Time</td>
                    <td>Route</td>
                    <td>Milepoint</td>
                    <td>Latitude</td>
                    <td>Longitude</td>
                    <td>Main Road Name</td>
                    <td>City</td>
                    <td>County</td>
                    <td>Severity</td>
                    <td>More Details</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model.Crashes)
                {
                    <tr>
                        <td>@c.CRASH_ID</td>
                        <td>@c.CRASH_DATETIME</td>
                        <td>@c.ROUTE</td>
                        <td>@c.MILEPOINT</td>
                        <td>@c.LAT_UTM_Y</td>
                        <td>@c.LONG_UTM_X</td>
                        <td>@c.MAIN_ROAD_NAME</td>
                        <td>@c.CITY</td>
                        <td>@c.COUNTY_NAME</td>
                        <td>@c.Severity.SEVERITY_NAME</td>

                        <td>
                            <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="CrashDetails"
                               asp-route-crashId="@c.CRASH_ID" asp-route-returnPage="@Model.PageInfo.CurrentPage">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div page-model="@Model.PageInfo" page-action="ViewCrashes" page-class="btn border mt-3" page-classes-enabled="true"
             page-class-links="text-center" page-class-normal="btn btn-outline-dark" page-class-selected="btn btn-primary"
             page-class-label="p-2 font-weight-bold  pt-md-2  text-center" class="text-center">
        </div>
    </div>
</section>
