@{
}

@model IEnumerable<string>

<div class="btn-group">
    <button class="btn btn-sm btn-outline-secondary dropdown-toggle font-weight-bold" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Severity
    </button>

    <div class="dropdown-menu">
        <a asp-controller="Home" asp-action="ViewCrashes" asp-route-crashSeverity="" asp-route-pageNum="1"
           class="dropdown-item">Clear Filter</a>

        <div class="dropdown-divider"></div>

        @foreach (string s in Model)
        {
            <a asp-controller="Home" asp-action="ViewCrashes" asp-route-crashSeverity="@s" asp-route-pageNum="1"
               class="@(ViewBag.SelectedSeverity == s ? "dropdown-item active" : "dropdown-item")">@s</a>
        }
    </div>
</div>
